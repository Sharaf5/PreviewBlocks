{
  "name": "previewblocks",
  "displayName": "PreviewBlocks",
  "description": "preview mode code-block useful features including copy, lang name, ...etc",
  "publisher": "sharaf5",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sharaf5/PreviewBlocks.git" 
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "markdown.previewScripts": [
      "./media/preview.js"
    ],
    "markdown.previewStyles": [
      "./media/preview.css"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
